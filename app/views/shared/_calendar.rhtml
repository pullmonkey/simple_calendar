<% %>
  <%= render :partial => 'shared/tabs' %>
  <table class= "table_border" id="calendar" cellpadding="0" cellspacing="0">
    <tr>
      <td><%= image_tag 'top_left.png', :width => "14", :height => "14", :border => "0", :alt => "..." %></td>
      <td width="100%"></td>
      <td><%= image_tag 'top_right.png', :width => "14", :height => "14", :border => "0", :alt => "..." %></td>
    </tr>
    <tr>
      <td></td>
      <td align="center">
        <div id="inner_calendar">
          <% mode = controller.action_name == 'day_view' ? 'day' : 'month' %>
          <%= render :simple_calendar => session[:simple_calendar_name], :layout => false, 
                                                                         :mode   => mode, 
                                                                         :day    => @day, 
                                                                         :month  => @month, 
                                                                         :year   => @year %>
        </div>
      </td>
      <td></td>
    </tr>
    <tr>
      <td><%= image_tag 'bottom_left.png', :width => "14", :height => "14", :border => "0", :alt => "..." %></td>
      <td></td>
      <td><%= image_tag 'bottom_right.png', :width => "14", :height => "14", :border => "0", :alt => "..." %></td>
    </tr>
  </table>
