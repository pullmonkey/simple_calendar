<% -%>
<div id="tabs">
  <ul>
    <li id="<%= @mode == "day" ? "active_tab" : "tab" %>" class="<%= @mode == "day" ? "selected" : "unselected" %>">
      <% if @mode == "day" %>
        Day
      <% else %>
        <%= link_to "Day", "#{home_path}/simple_calendar/day_view?date=#{@date}" %>
      <% end %>
    </li>
    <li <%= @mode != "day" ? 'id="active_tab" class="selected"' : 'id="tab" class="unselected"' %>>
       <% if @mode != "day" %>
         Month 
       <% else %>
        <%= link_to "Month", "#{home_path}/simple_calendar/month_view?date=#{@date}" %>
       <% end %>
    </li>  
  </ul>
</div>

